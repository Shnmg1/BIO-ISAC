{
  "ConnectionStrings": {
    "DefaultConnection": "Server=your_server_here;Database=your_database_here;User Id=your_user_here;Password=your_password_here;Port=3306;"
  },
  "OTX": {
    "ApiKey": "your_otx_api_key_here"
  },
  "NIST": {
    "ApiKey": "your_nist_api_key_here"
  },
  "Gemini": {
    "ApiKey": "your_gemini_api_key_here",
    "Model": "gemini-3-pro-preview"
  },
  "ThreatIngestion": {
    "Enabled": true,
    "FetchIntervalMinutes": 60,
    "RunOnStartup": true,
    "AIRating": {
      "Enabled": true,
      "IntervalMinutes": 15,
      "BatchSize": 10,
      "DelayBetweenRequestsSeconds": 10,
      "MaxRetries": 3,
      "RetryDelaySeconds": 30
    },
    "ApiSources": {
      "OTX": {
        "Enabled": true,
        "IntervalMinutes": 60
      },
      "NVD": {
        "Enabled": true,
        "IntervalMinutes": 120
      },
      "CISA": {
        "Enabled": true,
        "IntervalMinutes": 360
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System.Net.Http.HttpClient": "None",
      "MyApp.Namespace.Services": "Warning",
      "MyApp.Namespace.Services.ThreatIngestionBackgroundService": "Warning",
      "MyApp.Namespace.Services.NISTService": "Warning",
      "MyApp.Namespace.Services.OTXService": "Warning",
      "MyApp.Namespace.Services.CISAService": "Warning"
    }
  },
  "AllowedHosts": "*"
}
